<Window x:Class="Reservations.Reservoom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reservations.Reservoom" xmlns:views="clr-namespace:Reservations.Reservoom.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="14">
    <!--definindo uma margem global-->
    <Grid Margin="20 10" MaxWidth="600">
        <!--MainWindow possui seu DataContext Apontando pra MainViewModel em App.Xaml.cs, que por sua vez possui a propriedade CurrentViewModel-->
        <views:ReservationListingView DataContext="{Binding CurrentViewModel}" />
    </Grid>
</Window>
